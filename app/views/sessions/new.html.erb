<div class="show">
<h2>Login</h2>
<% form_tag sessions_path do %>  
<p class="input">Username:<span class="align"><%= password_field_tag :username %></span> </p>
<p class="input">Password:<span class="align"><%= password_field_tag :password %></span></p>
<p><%= submit_tag "Login" %> </p> 
<% end %>
</div>
