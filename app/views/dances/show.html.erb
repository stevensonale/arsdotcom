<div class="show">
<% div_for @dance do%>
<p><%= image_tag @dance.photo.url(:large)%></p>
<br/>
<h2><%= @dance.dance_name%></h2>
<p><b><%= @dance.dance_location%></b></p>
<p><b><%= h(@dance.dance_date_one.strftime("%A, %x"))%> - <%= h(@dance.dance_time.strftime("%I:%M %p"))%></b></p>
<p><b>Lesson One - <%= h(@dance.lesson_one_description)%></b> - <b><%= h(@dance.lesson_one_time.strftime("%I:%M %p"))%></b></p>
<br/>
<p ><%= @dance.dance_description%></p>
<%end%>
<br/>
<p>
<%if admin?%>
<%= link_to 'Edit', edit_dance_path(@dance) %> |
<%= link_to "Destroy", @dances, :confirm => 'Are you sure?', :method => :delete %> |
<%end%>
<%= link_to 'All Dances', dances_path %>
</p>
</div>
