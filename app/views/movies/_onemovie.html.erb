<% form_for @movie, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :movie_name %><br />
    <%= f.text_field :movie_name %>
  </p>
  <p>
    <%= f.label :date_seen %><br />
    <%= f.date_select :date_seen %>
  </p>
  <p>
    <%= f.label :movie_synopsis %><br />
    <%= f.text_area :movie_synopsis %>
  </p>
  <p>
    <%= f.label :movie_review %><br />
    <%= f.text_area :movie_review %>
  </p>
  <p>
    <%= f.label :poster, "Please upload a movie poster." %><br />
    <%= f.file_field :poster %>
  </p>
<br/>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
